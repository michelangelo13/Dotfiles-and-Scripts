alias reload='source ~/.profile'
alias newalias='mate -w ~/config/dotfiles/bash/aliases && reload'
alias newenv='mate -w ~/config/dotfiles/bash/env && reload'
alias newconfig='mate -w ~/config/dotfiles/bash/config && reload'

alias ls='ls -AGF'
alias list='ls -AGFohS'

#  ruby
alias c='script/rails console'
alias s='script/rails server'
alias migrate='rake db:migrate && rake db:migrate RAILS_ENV=test'

alias hgc='hg commit -m '

# git
alias gitk='gitk --all'
alias gst='git status'
alias gits='git status'
alias gita='git add -A'

alias prolog='swipl'

function gitc() {
  # git add -A
  git commit -m "$*" # all arguments are applied here, $1 would apply first argument etc.
}